{
    "name": "mellanyx/di-router",
    "description": "",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Aleksandr Starikov",
            "email": "starik0v_dev@icloud.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 | ^8.0",
        "php-di/php-di": "^6.3",
        "league/route": "^5.1",
        "laminas/laminas-diactoros": "^2.8",
        "laminas/laminas-httphandlerrunner": "^2.1",
        "ext-json": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "slevomat/coding-standard": "^7.0",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "php-parallel-lint/php-console-highlighter": "^0.5.0"
    },
    "autoload": {
        "psr-4": {
            "Mellanyx\\StandaloneContainerRouter\\": "src/"
        },
        "files": [
            "configs/constants.php"
        ]
    },
    "scripts": {
        "check": [
            "@cs-check"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "post-autoload-dump": [
            "php -r \"file_exists('.editorconfig') ? \"\" : copy('configs/.editorconfig', '.editorconfig');\"",
            "php -r \"file_exists('phpcs.xml.dist') ? \"\" : copy('configs/phpcs.xml.dist', 'phpcs.xml.dist');\"",
            "php -r \"file_exists('configs') ? \"\" : mkdir('configs/', 0755, true); \"",
            "php -r \"file_exists('configs/constants.php') ? \"\" : copy('configs/constants.php', 'configs/constants.php');\"",
            "php -r \"file_exists('configs/container.php') ? \"\" : copy('configs/container.php', 'configs/container.php');\"",
            "php -r \"file_exists('configs/routes.php') ? \"\" : copy('configs/routes.php', 'configs/routes.php');\""
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
